body
  font-size 16px
  height 100%
  font-family 'Lato',sans-serif
  font-weight 400
  background-color white

h1,h2,h3,h4,h5,h6
  font-family 'Rancho', cursive
  font-weight 700
  color #1C401D
h1
  font-size 2.5em
h2
  font-size 2em
h3
  font-size 1.7em
h4
  font-size 1.3em
  color #795548
p
  font-size 1em
.container
  width 100%
  height 100%
  box-sizing border-box
  border 5px solid white
  .header
    position absolute
    width 100%
    height 60px
    box-sizing border-box
    padding 10px 10px 0 10px
    top 0
    left 0
    &-mobile
      height 100%
      width 100%
      display flex
      justify-content space-between
      &-img
        width 50%
        margin-left 1em
        visibility hidden
        img
          height 50px
      &-bMenu
        margin-right 10px
        font-size 1.5em
        line-height 50px
        background-color transparent
        color #1C401D
        border 0
    &-navbar
      background-color #4CAF50
      position fixed
      width 260px
      height 100vh
      padding 1em
      top 0
      left 0
      box-sizing border-box
      overflow hidden
      transition transform .3s ease-out
      transform translate(-260px,0)

      li
        list-style none
        a
          padding-top .5em
          color white
          font-weight 700
          font-size 2em
          text-decoration none
          display block
          width 100%
      &-open
        transform translate(0,0)

@media (min-width: 431px) and (orientation: portrait),(min-width: 741px) and (orientation: landscape)
  h1
    font-size 4em
  h2
    font-size 3.5em
  h3
    font-size 3.2em
  h4
    font-size 2.8em
  p
    font-size 2em
  .container
    border 10px solid white
    .header
      height 90px
      padding 20px 20px 0 20px
      &-mobile
        background-color rgba(255,255,255,0)
        &-img
          visibility hidden
          img
            height 70px
        &-bMenu
          margin-right 20px
          font-size 2em
          line-height 70px
@media (min-width: 1200px) and (orientation: landscape)
  h1
    font-size 5em
  h2
    font-size 4.5em
  h3
    font-size 4.2em
  h4
    font-size 3.8em
  p
    font-size 1.5em
  .container
    border 10px solid white
    .header
      height 90px
      padding 20px 20px 0 20px
      display flex
      align-items center
      &-mobile
        background-color rgba(255,255,255,0)
        width 25%
        display block
        &-img
          visibility hidden
          img
            height 70px
        &-bMenu
          display none
      &-navbar
        background-color transparent
        position initial
        width 75%
        height auto
        padding 0 1em
        top 0
        left 0
        display flex
        flex-direction row
        flex-wrap wrap
        justify-content flex-end
        box-sizing border-box
        overflow hidden
        transition none
        transform none

        li
          list-style none
          a
            color #BFF2B4
            padding 0 .5em
            font-weight 400
            font-size 1.8em
            text-decoration none
            display block
            width 100%
            transition color 1.1s ease-out;
            &:hover
              color #4CAF50
        &-open
          transform translate(0,0)
